				outstring(100,0,SVOr.TransDate,false);
				outstring(150,0,SVOr.RegDate,false);	
				outstring(200,0,SVOr.WSCost,false);
				outstring(250,0,SVOr.GiveAwayUsr,false);		
			endformat;
			sum = sum + SVOr.WSCost;
		end;		
	end;
	
	StartFormat(15);
		outstring(0,0,"Акт",false);			
		outstring(50,0,"Клиент",false);
		outstring(100,0,"Дата Акта",false);
		outstring(150,0,"Дата выдачи",false);	
		outstring(200,0,"К оплате",false);
		outstring(250,0,"Выдал",false);	
	endformat;
	
	IVr.InvDate = RepSpec.sStartDate;
