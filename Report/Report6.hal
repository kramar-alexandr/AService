	val sum;
	string 100 searchstr;
	
	startreportnoheaderjob("Выданные ремонты за период");
	
	StartFormat(15);
		outstring(0,0,"Ремонт",false);			
		outstring(50,0,"Клиент",false);
		outstring(100,0,"Дата ремонта",false);
		outstring(150,0,"Дата выдачи",false);	
		outstring(200,0,"К оплате",false);
		outstring(250,0,"Выдал",false);	
	endformat;
	
